# SmartHire AI Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
VITE_APP_NAME=SmartHire AI
VITE_APP_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001/api

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# LinkedIn OAuth Configuration  
# Get these from: https://www.linkedin.com/developers/
VITE_LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# GitHub OAuth Configuration
# Get these from: https://github.com/settings/developers
VITE_GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Database Configuration (if using backend)
DATABASE_URL=postgresql://username:password@localhost:5432/smarthire_db
MONGODB_URI=mongodb://localhost:27017/smarthire

# JWT Configuration (if using backend)
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (for sessions/caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Development/Production Mode
NODE_ENV=development
VITE_NODE_ENV=development