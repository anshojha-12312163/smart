# Server Configuration
PORT=3002
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3001

# Real Job API Keys (Get from respective platforms)
# RemoteOK - Public API (No key needed)
REMOTEOK_API_URL=https://remoteok.io/api

# Adzuna Jobs API (Free tier: 1000 calls/month)
# Sign up: https://developer.adzuna.com/
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_APP_KEY=your_adzuna_app_key

# The Muse API (Free, no key needed)
THEMUSE_API_URL=https://www.themuse.com/api/public

# GitHub Jobs API Alternative - Remotive
REMOTIVE_API_URL=https://remotive.io/api/remote-jobs

# JSearch API (RapidAPI) - Real-time job search
# Sign up: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
RAPIDAPI_KEY=your_rapidapi_key
RAPIDAPI_HOST=jsearch.p.rapidapi.com

# LinkedIn Jobs Scraper (RapidAPI)
LINKEDIN_RAPIDAPI_KEY=your_rapidapi_key

# Indeed Jobs API (RapidAPI)
INDEED_RAPIDAPI_KEY=your_rapidapi_key

# Glassdoor API (RapidAPI)
GLASSDOOR_RAPIDAPI_KEY=your_rapidapi_key

# Database (Optional - for caching)
MONGODB_URI=mongodb://localhost:27017/smarthire

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
